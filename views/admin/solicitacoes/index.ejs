<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>

<body>
    <div class="container">
        <hr>
        <!--TODO: alterar tabelas para grip com Boostrap-->
        <table class="table table-striped table-borderless table-hover">
            <thead>
                <tr>
                    <th>Matricula</th>
                    <th>Nome</th>
                    <th>Periodo inicial</th>
                    <th>Periodo final</th>
                    <th>Data de inicio</th>
                    <th>Data fim</th>
                    <th>Dias de ferias</th>
                    <th>Dias de abono</th>
                </tr>
            </thead>
            <tbody>
                <% solicitacoes.forEach(solicitacoes => {  %>
                    <tr>
                        <td><%= solicitacoes.aquisitivo.matricula %></td>
                        <td><%= solicitacoes.aquisitivo.nome %></td>
                        <td><%= solicitacoes.aquisitivo.inicioper %></td>
                        <td><%= solicitacoes.aquisitivo.fimper %></td>
                        <td><%= solicitacoes.dataInicio %></td>
                        <td><%= solicitacoes.dataFim %></td>
                        <td><%= solicitacoes.diasFerias %></td>
                        <td><%= solicitacoes.diasAbono %></td>
                        <td>
                            <a href="" class="btn btn-warning">Finalizar</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
</body>

<%- include('../../partials/footer.ejs') %>