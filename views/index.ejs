<%- include('./partials/header.ejs') %>
<%- include('./partials/homenavbar.ejs') %>

<body>
    <div class="container-lg">
        <div class="jumbotron">
            <h1 class="display-4">Bem-vindo!</h1>
            <p class="lead">Este é um sistema de controle de férias.</p>
        </div>
        
        <hr>
        <!--TODO: alterar tabelas para grip com Boostrap-->
        <table class="table table-sm table-striped table-borderless text-center">
            <button style="position: relative;" class="btn btn-secondary">Baixar relatorio</button>
            <thead>
                <tr>
                    <th>Matricula</th>
                    <th>Nome</th>
                    <th>Centro de custo</th>
                    <th>Cargo</th>
                    <th>Inicio periodo</th>
                    <th>Fim periodo</th>
                    <!-- TODO: alterar colunas ocupar somente uma-->
                    <th  colspan="2">1 ferias</th>
                    <th>2 ferias</th>
                    <th>dias 2 ferias</th>
                    <th>3 ferias</th>
                    <th>dias 3 ferias</th>
                    
                </tr>
            </thead>
            <tbody>
                <% ferias.forEach(ferias => {  %>
                    <tr>
                        <td><%= ferias.matricula %></td>
                        <td class="text-left"><%= ferias.nome %></td>
                        <td class="text-left"><%= ferias.nomecc %></td>
                        <td class="text-left"><%= ferias.nomecargo %></td>
                        <td><%= ferias.inicioper %></td>
                        <td><%= ferias.fimper %></td>
                        <td><%= ferias.ini1fer %></td>
                        <td><%= ferias.dias1fer %></td>
                        <td><%= ferias.ini2fer %></td>
                        <td><%= ferias.dias2fer %></td>
                        <td><%= ferias.ini3fer %></td>
                        <td><%= ferias.dias3fer %></td>
                        <td>
                            <a href="/ferias/edit/<%= ferias.id %>" class="btn btn-warning">Solicitar ferias</a>
                        </td>
                        
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        
</body>
